extends ../layout

block content
  h1(style="justify-self: center;") Gestión de Alas

  .d-flex.justify-content-between.align-items-center
    .d-flex.justify-content-between.align-items-center.mt-3
      .btn-group
        a.btn.btn-outline-primary(
          href="/alas?estado=todos"
          class=estado==="todos" ? "active" : ""
        ) Todos

        a.btn.btn-outline-success(
          href="/alas?estado=activos"
          class=estado==="activos" ? "active" : ""
        ) Activos

        a.btn.btn-outline-secondary(
          href="/alas?estado=inactivos"
          class=estado==="inactivos" ? "active" : ""
        ) Inactivos

    //- BUSCADOR
    form(method="GET" action="/alas" class="d-flex gap-2 mt-3")
      select.form-control(name="unidadFiltro" style="width: 300px;")
        option(
          value=0
          selected=unidadFiltro == 0
        ) De todas las Unidades

        each u in unidades
          option(
            value=u.idUnidad
            selected=unidadFiltro == u.idUnidad
          ) #{u.nombre}

      input(type="hidden" name="estado" value=estado)

      button.btn.btn-outline-primary(type="submit") Buscar


    button.btn.btn-success.mx-3.mt-3(
      type="button"
      data-bs-toggle="modal"
      data-bs-target="#modalCrearAla"
    ) + Nueva Ala

  table.table.table-striped.mt-3
    thead
      tr
        th ID
        th Nombre
        th Unidad
        th Estado
        th Acciones
    tbody
      if alas.length > 0
        each a in alas
          tr
            td #{a.idAla}
            td #{a.nombre}
            td #{a.Unidad.nombre}
            td 
              if a.visible > 0
                span.bg-success.text-white(style="padding: 4px 10px; border-radius: 5px;") Activo
              else 
                span.bg-secondary.text-white(style="padding: 4px 10px; border-radius: 5px;") Inactivo
            td
              if a.visible == 1
                button.btn.btn-sm.btn-warning.mx-1(
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#modalEditarAla"
                  data-id=a.idAla
                  data-nombre=a.nombre
                  data-unidad-id=a.Unidad.idUnidad
                ) Editar
                button.btn.btn-sm.btn-danger.mx-1(
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#modalBajaAla"
                  data-id=a.idAla
                  data-nombre=`${a.nombre}`
                ) Dar de baja
              else
                button.btnAltaAla.btn.btn-sm.btn-primary.mx-1(
                  data-id=a.idAla
                ) Dar de Alta
      else
        tr
          td(colspan="9" class="text-center text-muted")
            | No hay alas registradas
  
  if totalPages > 1
    nav.mt-4
      ul.pagination
        each n in Array(totalPages).fill(0).map((_, i) => i + 1)
          li.page-item(class=page===n ? "active" : "")
            a.page-link(
              href=`/alas?estado=${estado}&buscar=${buscar}&page=${n}`
            ) #{n}
  
  //- MODAL CREAR ALA
  #modalCrearAla.modal.fade(tabindex="-1" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Nueva Ala
          button.btn-close(type="button", data-bs-dismiss="modal")

        .modal-body
          form#formCrearAla
            .mb-3
              label.form-label Unidad
              select.form-control(name="unidadId")
                each u in unidades
                  option(value=u.idUnidad) #{u.nombre}

            .mb-3
              label.form-label Nombre
              input.form-control(name="nombre" required)

        .modal-footer
          button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
          button.btn.btn-primary(type="submit" form="formCrearAla") Guardar

  //- MODAL EDITAR ALA
  #modalEditarAla.modal.fade(tabindex="-1" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Editar Ala
          button.btn-close(type="button", data-bs-dismiss="modal")

        .modal-body
          form#formEditarAla
            input(type="hidden" name="id")

            .mb-3
              label.form-label Unidad
              select.form-control(name="unidadId")
                each u in unidades
                  option( value=u.idUnidad ) #{u.nombre}

            .mb-3
              label.form-label Nombre
              input.form-control(name="nombre" required)

        .modal-footer
          button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
          button.btn.btn-primary(type="submit" form="formEditarAla") Guardar Cambios

  //- MODAL PARA CONFIRMAR LA BAJA LOGICA
  #modalBajaAla.modal.fade(tabindex="-1" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Dar de baja ala
          button.btn-close(type="button", data-bs-dismiss="modal")

        .modal-body
          p Seguro que deseas dar de baja a:
            strong 
              span#nombreAla

        .modal-footer
          button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancelar
          button.btn.btn-danger#btnConfirmarBaja(type="button") Baja lógica

  script.
    document.addEventListener("DOMContentLoaded", () => {
      
      // -------- QUITAR FOCUS DE MODALES SI SE OCULTAN --------
      document.querySelectorAll('.modal').forEach(modal => {
        modal.addEventListener("hidden.bs.modal", () => {
          document.activeElement.blur();
          document.body.focus();
        });
      });

      // -------- CREAR ALA --------
      const formCrear = document.getElementById("formCrearAla");

      if (formCrear) {
        formCrear.addEventListener("submit", async (e) => {
          e.preventDefault();
          const data = Object.fromEntries(new FormData(formCrear));

          const res = await fetch("/alas/crear", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
          });

          const json = await res.json();
          if (json.ok) location.reload();
          else alert(json.error);
        });
      }

      // -------- EDITAR ALA --------
      const modalEditar = document.getElementById("modalEditarAla");
      const formEditar = document.getElementById("formEditarAla");

      modalEditar.addEventListener("show.bs.modal", (event) => {
        const button = event.relatedTarget;

        formEditar.id.value = button.dataset.id;
        formEditar.nombre.value = button.dataset.nombre;

        const unidadId = button.dataset.unidadId;
        formEditar.unidadId.value = unidadId;
      });

      formEditar.addEventListener("submit", async (e) => {
        e.preventDefault();

        const data = Object.fromEntries(new FormData(formEditar));

        const res = await fetch(`/alas/editar/${data.id}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data)
        });

        const json = await res.json();
        if (json.ok) location.reload();
        else alert(json.error);
      });

      // -------- BAJA ALA --------
      const modalBaja = document.getElementById("modalBajaAla");
      const btnBaja = document.getElementById("btnConfirmarBaja");

      modalBaja.addEventListener("show.bs.modal", (event) => {
        const button = event.relatedTarget; // botón que abrió el modal

        const id = button.dataset.id;
        const nombre = button.dataset.nombre;

        // Guardamos el ID en el botón de confirmar para usarlo luego
        btnBaja.dataset.id = id;

        // Mostrar el nombre del ala en el texto del modal
        const nombreSpan = modalBaja.querySelector("#nombreAla");
        if (nombreSpan) {
          nombreSpan.textContent = nombre;
        }
      });

      btnBaja.addEventListener("click", async () => {
        
        const id = btnBaja.dataset.id;

        const res = await fetch(`/alas/baja/${id}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" }
        });

        const json = await res.json();

        if (json.ok) {
          location.reload(); // refrescar tabla
        } else {
          alert(json.error || "Error al dar de baja");
        }
      });

      // -------- ALTA ALA --------
      const botonesAlta = document.querySelectorAll(".btnAltaAla");

      botonesAlta.forEach(btn => {
        btn.addEventListener("click", async () => {

          const id = btn.dataset.id;

          const res = await fetch(`/alas/alta/${id}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" }
          });

          const json = await res.json();

          if (json.ok) location.reload();
          else alert(json.error || "Error al dar de alta");
        });
      });
    });