doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title HIS - Hospital
    link(rel="stylesheet", href="/css/layout.css")
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css")

  body(class="bg-light")

    // NAV Superior
    nav.navbar.navbar-expand-sm.navbar-light.bg-primary.shadow-sm.mb-0
      .container-fluid
        a.navbar-brand.fw-bold.fs-4.text-white(href="/") Vertacnik-Hospital 2025
        if user
          include partials/userDropdown

    // CONTENEDOR FLEX: Sidebar + Contenido
    .d-flex
      // SIDEBAR IZQUIERDA
      if user
        aside#sidebar.bg-white.border-end.p-3(style="width:250px; min-height:100vh;")
          ul.nav.flex-column
            li.nav-item.mb-2
              a.nav-link(href="/users/dashboard") Inicio

            li.nav-item.mb-2
              a.nav-link(href="/pacientes") Pacientes

            li.nav-item.mb-2
              a.nav-link(href="/admisiones") Admisiones

            li.nav-item.mb-2
              a.nav-link(href="/evaluacionEnfermeria") Evaluación Enfermería

            li.nav-item.mb-2
              a.nav-link(href="/evaluacionMedica") Evaluación Médica

            if user.rol === "admin"
              li.nav-item.mb-2
                a.nav-link(href="/usuarios") Usuarios

              li.nav-item.mb-2
                a.nav-link(href="/unidades") Unidades

              li.nav-item.mb-2
                a.nav-link(href="/alas") Alas

              li.nav-item.mb-2
                a.nav-link(href="/habitaciones") Habitaciones

              li.nav-item.mb-2
                a.nav-link(href="/camas") Camas

            li.nav-item.mt-4
              form(action="/users/logout" method="POST")
                button.btn.btn-outline-danger.w-100(type="submit") Cerrar sesión

      // CONTENIDO A LA DERECHA
      main.flex-grow-1.p-4
        block content
    
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js")